  .seccion-hero {
    background-image: url("https://raw.githubusercontent.com/danuruiz7/landing-reto-adri/main/public/bg-hero.jpg");
    background-position: center;
    background-repeat: repeat;
    background-size: cover;
    display: flex;
    place-content: center;
    position: relative;
    overflow: hidden;
    height: 90vh; /* Asegúrate de definir una altura, ajusta según necesites */
  }

  .seccion-hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.5) 0%,
      rgba(0, 0, 0, 0) 100%
    );
    pointer-events: none; /* Evita que el pseudo-elemento intercepte interacciones del usuario */
  }

  .seccion-hero * {
    position: relative; /* Asegúrate de que el contenido sobre el fondo no esté afectado por el gradiente */
  }
</style>
