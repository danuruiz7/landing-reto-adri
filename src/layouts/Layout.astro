---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Comienza el reto de para mejor tu salud"
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://raw.githubusercontent.com/danuruiz7/landing-reto-adri/f86e9a52f19940b7c012aff82f6f4cf1783c505d/public/icon.svg"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  .container {
    max-width: 1280px;
    height: 100%;
  }
</style>
